<div class="container">
  <div class="row">
    <div class="col-md-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Default form</h4>
          <p class="card-description">
            Form
          </p>
          <form class="forms-sample" method="post" action="/san-pham/them-moi"
                enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="name"
              />
            </div>
            <div class="form-group">
              <label for="price">Price</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                placeholder="price"
              />
            </div>
            <div class="form-group">
              <label for="quantity">quantity</label>
              <input
                type="number"
                class="form-control"
                id="quantity"
                name="quantity"
                placeholder="Quantity"
              />
            </div>
            <div class="form-group">
              <label for="category">Category</label>
              <select class="form-control" id="category" name="category">
                {{#each categories}}
                  <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <input type="file" id="image-file" class="form-control" onchange="onChangeFile()"/>
              <input type="hidden" name="image" id="image" class="file-upload-default" />
              </div>
            </div>
            <div class="form-group">
              <img class="product-img" alt="hình ảnh sản phẩm" id="image-view" />
            </div>
            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <button class="btn btn-light">Cancel</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>

//upload hình lên server và nhận vể đường link của tấm hình
    const onChangeFile = () => {
        const file = document.getElementById('image-file').files[0];
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('image-view').src = e.target.result;
        }
        reader.readAsDataURL(file);
    }
  </script>